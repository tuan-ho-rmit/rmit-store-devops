{
  "title": "RMIT Store - App SLO",
  "schemaVersion": 36,
  "editable": true,
  "tags": ["rmit", "app", "slo"],
  "time": {"from": "now-6h", "to": "now"},
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "namespace",
        "label": "Namespace",
        "datasource": "Prometheus",
        "query": "label_values(kube_pod_info, namespace)",
        "current": {"text": "prod", "value": "prod"},
        "refresh": 1
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Request rate (RPS)",
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum by (service) (rate(traefik_service_requests_total{code!~\"5..\",namespace=~\"$namespace\", service=~\"backend.*\"}[5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error rate (4xx / 5xx)",
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum(rate(traefik_service_requests_total{code=~\"4..\",namespace=~\"$namespace\", service=~\"backend.*\"}[5m]))",
          "legendFormat": "4xx",
          "refId": "A"
        },
        {
          "expr": "sum(rate(traefik_service_requests_total{code=~\"5..\",namespace=~\"$namespace\", service=~\"backend.*\"}[5m]))",
          "legendFormat": "5xx",
          "refId": "B"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p50/p90/p99 (s)",
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(traefik_service_request_duration_seconds_bucket{namespace=~\"$namespace\", service=~\"backend.*\"}[5m])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.9, sum(rate(traefik_service_request_duration_seconds_bucket{namespace=~\"$namespace\", service=~\"backend.*\"}[5m])) by (le))",
          "legendFormat": "p90",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(traefik_service_request_duration_seconds_bucket{namespace=~\"$namespace\", service=~\"backend.*\"}[5m])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Pod restarts (last 1h)",
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "increase(kube_pod_container_status_restarts_total{namespace=~\"$namespace\", pod=~\"backend-.*\"}[1h])",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Backend CPU (cores)",
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum by (pod) (rate(container_cpu_usage_seconds_total{namespace=~\"$namespace\", pod=~\"backend-.*\", image!=\"\"}[5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Backend Memory (bytes)",
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "container_memory_working_set_bytes{namespace=~\"$namespace\", pod=~\"backend-.*\", image!=\"\"}",
          "refId": "A"
        }
      ]
    }
  ]
}


