{
  "name": "rmit-ecommerce",
  "version": "1.0.0",
  "description": "RMIT Ecommerce",
  "main": "server/index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "postinstall": "npm-run-all --parallel install:*",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "test": "npm run test:server && npm run test:ui",
    "test:server": "cd server && npm test",
    "test:unit": "cd server && npm run test:unit",
    "test:integration": "cd server && npm run test:integration",
    "test:ui": "npx playwright test",
    "test:watch": "cd server && npm run test:watch",
    "test:coverage": "cd server && npm test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomhuynhsg/rmit-ecommerce.git"
  },
  "keywords": [
    "node",
    "express",
    "mongoose",
    "react",
    "redux",
    "redux-thunk",
    "webpack"
  ],
  "author": "Tom Huynh (https://github.com/tomhuynhsg)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tomhuynhsg/rmit-ecommerce/issues"
  },
  "homepage": "https://github.com/tomhuynhsg/rmit-ecommerce#readme",
  "devDependencies": {
    "@types/node": "^24.5.0",
    "cross-env": "^5.2.1",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@playwright/test": "^1.55.0",
    "playwright": "^1.55.0"
  }
}
